<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.vlearn.controller.LoginController"
           stylesheets="@login.css"
           style="-fx-background-color: linear-gradient(to bottom right, #0f0f1f, #1a1a3f);">

    <ImageView fx:id="backgroundImage" fitWidth="800" fitHeight="600"/>

    <VBox alignment="CENTER" spacing="20" styleClass="login-form">
        <Label text="Welcome" styleClass="title"/>
        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" onAction="#handleLogin"/>
        <Button text="Login" onAction="#handleLogin" styleClass="login-button"/>
        <HBox alignment="CENTER" spacing="5">
            <Label text="Need an account?" style="-fx-text-fill: #555555;"/>
            <Hyperlink text="Sign Up" onAction="#handleSignUp" style="-fx-font-weight: bold; -fx-text-fill: #1e90ff;"/>
        </HBox>
    </VBox>

</StackPane>
