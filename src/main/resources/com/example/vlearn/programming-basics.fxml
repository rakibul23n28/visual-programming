<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.vlearn.controller.ProgrammingBasicsController"
            fx:id="rootPane"
            stylesheets="@style.css">

    <!-- Main Content with Resizable Panels -->
    <center>
        <SplitPane dividerPositions="0.18">
            <!-- Left Sidebar -->
            <ScrollPane fx:id="leftSidebar" fitToWidth="true" style="-fx-background: transparent;" prefWidth="220" minWidth="150" maxWidth="250">
                <content>
                    <VBox spacing="12" style="-fx-padding: 15;">
                        <Button text="❮❮" onAction="#goBack" maxWidth="Infinity" styleClass="back-button"/>
                        <Button fx:id="btnVariables" text="Variables &amp; Data Types" maxWidth="Infinity" onAction="#openVariables" styleClass="modern-button"/>
                        <Button fx:id="btnOperators" text="Operators" maxWidth="Infinity" onAction="#openOperators" styleClass="modern-button"/>
                        <Button fx:id="btnIfElse" text="if-else" maxWidth="Infinity" onAction="#openIfElse" styleClass="modern-button"/>
                        <Button fx:id="btnSwitch" text="Switch Statement" maxWidth="Infinity" onAction="#openSwitch" styleClass="modern-button"/>
                        <Button fx:id="btnLoops" text="Loops" maxWidth="Infinity" onAction="#openLoops" styleClass="modern-button"/>
                        <Button fx:id="btnFunctions" text="Functions / Methods" maxWidth="Infinity" onAction="#openFunctions" styleClass="modern-button"/>
                        <Button fx:id="btnArrays" text="Arrays &amp; Lists" maxWidth="Infinity" onAction="#openArrays" styleClass="modern-button"/>
                        <Button fx:id="btnStrings" text="Strings" maxWidth="Infinity" onAction="#openStrings" styleClass="modern-button"/>
                        <Button fx:id="btnIO" text="Input / Output" maxWidth="Infinity" onAction="#openIO" styleClass="modern-button"/>
                    </VBox>
                </content>
            </ScrollPane>

            <!-- Center Simulation Area -->
            <AnchorPane fx:id="simulationPane" style="-fx-background-color:#1f1f1f;">
                <Label text="Simulation will appear here"
                       textFill="white"
                       layoutX="50"
                       layoutY="50"/>
            </AnchorPane>
        </SplitPane>
    </center>
</BorderPane>
