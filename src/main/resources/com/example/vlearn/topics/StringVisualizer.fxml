<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.vlearn.controller.programming_basic.StringVisualizerController"
            style="-fx-background-color: linear-gradient(to bottom, #fdfbfb, #ebedee);">

    <top>
        <VBox spacing="10" style="-fx-padding: 10px;">
            <Label text="String Simulations Visualizer"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Label text="Learn string operations interactively."
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" />
        </VBox>
    </top>

    <center>
        <TabPane fx:id="stringTabPane" tabClosingPolicy="UNAVAILABLE"
                 style="-fx-tab-min-width: 150px; -fx-tab-max-width: 250px; -fx-font-weight: bold;">

            <!-- 1. String Length -->
            <Tab text="String Length">
                <SplitPane dividerPositions="0.45">
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #e8f6f3; -fx-border-color: #1abc9c; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Enter a string:" style="-fx-font-weight: bold; -fx-text-fill: #16a085;" />
                        <TextField fx:id="strLengthInput" promptText="Enter string" />
                        <Button text="▶ Get Length" onAction="#simulateStringLength"
                                style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                        <Label text="Generated C++ Code:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="strLengthCode" editable="false" prefRowCount="8"
                                  style="-fx-control-inner-background: #f4f6f7; -fx-font-family: Consolas;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #fef9e7; -fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Console Output:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="strLengthConsole" editable="false" prefRowCount="5"
                                  style="-fx-control-inner-background: #fdfdfd; -fx-font-family: Consolas;" />
                        <Label text="Visual Output:" style="-fx-font-weight: bold;" />
                        <FlowPane fx:id="strLengthVisual" hgap="5" vgap="5" prefHeight="80" />
                    </VBox>
                </SplitPane>
            </Tab>

            <!-- 2. String Concatenation -->
            <Tab text="Concatenation">
                <SplitPane dividerPositions="0.45">
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #f0f8ff; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Enter first string:" style="-fx-font-weight: bold; -fx-text-fill: #2980b9;" />
                        <TextField fx:id="concatInput1" promptText="String 1" />
                        <Label text="Enter second string:" style="-fx-font-weight: bold; -fx-text-fill: #2980b9;" />
                        <TextField fx:id="concatInput2" promptText="String 2" />
                        <Button text="▶ Concatenate" onAction="#simulateConcat"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                        <Label text="Generated C++ Code:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="concatCode" editable="false" prefRowCount="8"
                                  style="-fx-control-inner-background: #f4f6f7; -fx-font-family: Consolas;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #fdf2f8; -fx-border-color: #e91e63; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Console Output:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="concatConsole" editable="false" prefRowCount="5"
                                  style="-fx-control-inner-background: #fdfdfd; -fx-font-family: Consolas;" />
                        <Label text="Visual Output:" style="-fx-font-weight: bold;" />
                        <FlowPane fx:id="concatVisual" hgap="5" vgap="5" prefHeight="80" />
                    </VBox>
                </SplitPane>
            </Tab>

            <!-- 3. String Comparison -->
            <Tab text="Comparison">
                <SplitPane dividerPositions="0.45">
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #f3e5f5; -fx-border-color: #9b59b6; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Enter first string:" style="-fx-font-weight: bold; -fx-text-fill: #8e44ad;" />
                        <TextField fx:id="compInput1" promptText="String 1" />
                        <Label text="Enter second string:" style="-fx-font-weight: bold; -fx-text-fill: #8e44ad;" />
                        <TextField fx:id="compInput2" promptText="String 2" />
                        <Button text="▶ Compare" onAction="#simulateCompare"
                                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                        <Label text="Generated C++ Code:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="compCode" editable="false" prefRowCount="8"
                                  style="-fx-control-inner-background: #f4f6f7; -fx-font-family: Consolas;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #f0fff4; -fx-border-color: #27ae60; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Console Output:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="compConsole" editable="false" prefRowCount="5"
                                  style="-fx-control-inner-background: #fdfdfd; -fx-font-family: Consolas;" />
                        <Label text="Visual Output:" style="-fx-font-weight: bold;" />
                        <FlowPane fx:id="compVisual" hgap="5" vgap="5" prefHeight="80" />
                    </VBox>
                </SplitPane>
            </Tab>

            <!-- 4. Substring -->
            <Tab text="Substring">
                <SplitPane dividerPositions="0.45">
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #fdf2e9; -fx-border-color: #e67e22; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Enter string:" style="-fx-font-weight: bold; -fx-text-fill: #d35400;" />
                        <TextField fx:id="subInput" promptText="String" />
                        <Label text="Start index:" style="-fx-font-weight: bold; -fx-text-fill: #d35400;" />
                        <TextField fx:id="subStart" promptText="Start" />
                        <Label text="End index:" style="-fx-font-weight: bold; -fx-text-fill: #d35400;" />
                        <TextField fx:id="subEnd" promptText="End" />
                        <Button text="▶ Get Substring" onAction="#simulateSubstring"
                                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                        <Label text="Generated C++ Code:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="subCode" editable="false" prefRowCount="8"
                                  style="-fx-control-inner-background: #f4f6f7; -fx-font-family: Consolas;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #fef9e7; -fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Console Output:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="subConsole" editable="false" prefRowCount="5"
                                  style="-fx-control-inner-background: #fdfdfd; -fx-font-family: Consolas;" />
                        <Label text="Visual Output:" style="-fx-font-weight: bold;" />
                        <FlowPane fx:id="subVisual" hgap="5" vgap="5" prefHeight="80" />
                    </VBox>
                </SplitPane>
            </Tab>

            <!-- 5. Character Count -->
            <Tab text="Character Count">
                <SplitPane dividerPositions="0.45">
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #f0f0f0; -fx-border-color: #7f8c8d; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Enter string:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" />
                        <TextField fx:id="charInput" promptText="String" />
                        <Button text="▶ Count Characters" onAction="#simulateCharCount"
                                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                        <Label text="Generated C++ Code:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="charCode" editable="false" prefRowCount="8"
                                  style="-fx-control-inner-background: #f4f6f7; -fx-font-family: Consolas;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #fef9f9; -fx-border-color: #e74c3c; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Console Output:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="charConsole" editable="false" prefRowCount="5"
                                  style="-fx-control-inner-background: #fdfdfd; -fx-font-family: Consolas;" />
                        <Label text="Visual Output:" style="-fx-font-weight: bold;" />
                        <FlowPane fx:id="charVisual" hgap="5" vgap="5" prefHeight="80" />
                    </VBox>
                </SplitPane>
            </Tab>

        </TabPane>
    </center>
</BorderPane>
