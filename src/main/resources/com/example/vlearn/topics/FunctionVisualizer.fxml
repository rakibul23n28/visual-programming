<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.vlearn.FunctionVisualizerController"
            style="-fx-background-color: linear-gradient(to bottom, #fdfbfb, #ebedee);">

    <top>
        <VBox spacing="10" style="-fx-padding: 10px;">
            <Label text="C++ Function/Method Simulator"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Label text="Learn functions interactively with visual simulation."
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" />
        </VBox>
    </top>

    <center>
        <TabPane fx:id="functionTabPane" tabClosingPolicy="UNAVAILABLE"
                 style="-fx-tab-min-width: 150px; -fx-tab-max-width: 250px; -fx-font-weight: bold;">

            <!-- 1. Addition Function -->
            <Tab text="Addition Function">
                <SplitPane dividerPositions="0.45">
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #e8f6f3; -fx-border-color: #1abc9c; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Enter two numbers:" style="-fx-font-weight: bold; -fx-text-fill: #16a085;" />
                        <TextField fx:id="addInput1" promptText="Number 1" />
                        <TextField fx:id="addInput2" promptText="Number 2" />
                        <Button text="▶ Calculate Sum" onAction="#additionFunction"
                                style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                        <Label text="Generated C++ Code:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="addCode" editable="false" prefRowCount="8"
                                  style="-fx-control-inner-background: #f4f6f7; -fx-font-family: Consolas;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #fef9e7; -fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Simulation" style="-fx-font-weight: bold; -fx-text-fill: #d35400;" />
                        <Label text="Console Output:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="addConsole" editable="false" prefRowCount="5"
                                  style="-fx-control-inner-background: #fdfdfd; -fx-font-family: Consolas;" />
                        <Label text="Visual Output:" style="-fx-font-weight: bold;" />
                        <FlowPane fx:id="addVisual" hgap="5" vgap="5" prefHeight="80" />
                    </VBox>
                </SplitPane>
            </Tab>

            <!-- 2. Factorial Function -->
            <Tab text="Factorial Function">
                <SplitPane dividerPositions="0.45">
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #f0f8ff; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Enter a number:" style="-fx-font-weight: bold; -fx-text-fill: #2980b9;" />
                        <TextField fx:id="factInput" promptText="Number" />
                        <Button text="▶ Calculate Factorial" onAction="#factorialFunction"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                        <Label text="Generated C++ Code:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="factCode" editable="false" prefRowCount="8"
                                  style="-fx-control-inner-background: #f4f6f7; -fx-font-family: Consolas;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #fdf2f8; -fx-border-color: #e91e63; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Simulation" style="-fx-font-weight: bold; -fx-text-fill: #c2185b;" />
                        <Label text="Console Output:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="factConsole" editable="false" prefRowCount="5"
                                  style="-fx-control-inner-background: #fdfdfd; -fx-font-family: Consolas;" />
                        <Label text="Visual Output:" style="-fx-font-weight: bold;" />
                        <FlowPane fx:id="factVisual" hgap="5" vgap="5" prefHeight="80" />
                    </VBox>
                </SplitPane>
            </Tab>

            <!-- 3. Palindrome Checker Function -->
            <Tab text="Palindrome Checker">
                <SplitPane dividerPositions="0.45">
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #f3e5f5; -fx-border-color: #9b59b6; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Enter text:" style="-fx-font-weight: bold; -fx-text-fill: #8e44ad;" />
                        <TextField fx:id="palInput" promptText="Text" />
                        <Button text="▶ Check Palindrome" onAction="#palindromeFunction"
                                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                        <Label text="Generated C++ Code:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="palCode" editable="false" prefRowCount="8"
                                  style="-fx-control-inner-background: #f4f6f7; -fx-font-family: Consolas;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #f0fff4; -fx-border-color: #27ae60; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Simulation" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;" />
                        <Label text="Console Output:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="palConsole" editable="false" prefRowCount="5"
                                  style="-fx-control-inner-background: #fdfdfd; -fx-font-family: Consolas;" />
                        <Label text="Visual Output:" style="-fx-font-weight: bold;" />
                        <FlowPane fx:id="palVisual" hgap="5" vgap="5" prefHeight="80" />
                    </VBox>
                </SplitPane>
            </Tab>

            <!-- 4. Fibonacci Function -->
            <Tab text="Fibonacci Function">
                <SplitPane dividerPositions="0.45">
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #fdf2e9; -fx-border-color: #e67e22; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Enter n:" style="-fx-font-weight: bold; -fx-text-fill: #d35400;" />
                        <TextField fx:id="fibInput" promptText="Number of terms" />
                        <Button text="▶ Generate Fibonacci" onAction="#fibonacciFunction"
                                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                        <Label text="Generated C++ Code:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="fibCode" editable="false" prefRowCount="8"
                                  style="-fx-control-inner-background: #f4f6f7; -fx-font-family: Consolas;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #fef9e7; -fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Simulation" style="-fx-font-weight: bold; -fx-text-fill: #d35400;" />
                        <Label text="Console Output:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="fibConsole" editable="false" prefRowCount="5"
                                  style="-fx-control-inner-background: #fdfdfd; -fx-font-family: Consolas;" />
                        <Label text="Visual Output:" style="-fx-font-weight: bold;" />
                        <FlowPane fx:id="fibVisual" hgap="5" vgap="5" prefHeight="80" />
                    </VBox>
                </SplitPane>
            </Tab>

            <!-- 5. Prime Checker Function -->
            <Tab text="Prime Checker">
                <SplitPane dividerPositions="0.45">
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #f0f0f0; -fx-border-color: #7f8c8d; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Enter number:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" />
                        <TextField fx:id="primeInput" promptText="Number" />
                        <Button text="▶ Check Prime" onAction="#primeFunction"
                                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                        <Label text="Generated C++ Code:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="primeCode" editable="false" prefRowCount="8"
                                  style="-fx-control-inner-background: #f4f6f7; -fx-font-family: Consolas;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-padding: 15px; -fx-background-color: #fef9f9; -fx-border-color: #e74c3c; -fx-border-width: 2; -fx-border-radius: 6;">
                        <Label text="Simulation" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
                        <Label text="Console Output:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="primeConsole" editable="false" prefRowCount="5"
                                  style="-fx-control-inner-background: #fdfdfd; -fx-font-family: Consolas;" />
                        <Label text="Visual Output:" style="-fx-font-weight: bold;" />
                        <FlowPane fx:id="primeVisual" hgap="5" vgap="5" prefHeight="80" />
                    </VBox>
                </SplitPane>
            </Tab>

        </TabPane>
    </center>
</BorderPane>
