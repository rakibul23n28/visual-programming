<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.vlearn.controller.SignupController"
           stylesheets="@sign-up.css"
           style="-fx-background-color: linear-gradient(to bottom right, #0f0f1f, #1a1a3f);">

    <ImageView fx:id="backgroundImage" fitWidth="800" fitHeight="600" preserveRatio="false"/>

    <VBox alignment="CENTER" spacing="20" styleClass="login-form">
        <Label text="Signup" styleClass="title"/>
        <TextField fx:id="firstNameField" promptText="First name"  styleClass="input-field"/>
        <TextField fx:id="lastNameField" promptText="Last name" styleClass="input-field"/>
        <TextField fx:id="usernameField" promptText="User name" styleClass="input-field"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>
        <PasswordField fx:id="retypePasswordField" promptText="Type Password again" styleClass="input-field"/>
        <Button fx:id="submitBtn" text="Signup" onAction="#handleSubmit" styleClass="login-button"/>
        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" style="-fx-text-fill: #555555;"/>
            <Hyperlink text="Login" onAction="#cancelSignUp" style="-fx-font-weight: bold; -fx-text-fill: #1e90ff;"/>
        </HBox>
    </VBox>

</StackPane>
