<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.vlearn.HelloController"
            fx:id="rootPane" stylesheets="@style.css">

    <children>

        <!-- Overlay -->
        <Rectangle fill="#00000055"
                   AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                   AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />

        <!-- Title -->
        <Label alignment="CENTER" contentDisplay="CENTER" text="Learning by Visual" textAlignment="CENTER" textFill="white"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="30.0">
            <font>
                <Font name="Franklin Gothic Demi" size="36" />
            </font>
        </Label>

        <!-- VBox for Main Buttons -->
        <!-- Main Buttons -->
        <VBox spacing="20" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="150.0">
            <children>
                <Button fx:id="btnProgrammingBasics" onAction="#openProgrammingBasics"
                        maxWidth="250" style="-fx-background-color: #ff8900; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12;"
                        text="Programming Basics" />

                <Button fx:id="btnDataStructure" onAction="#openDataStructure"
                        maxWidth="250" style="-fx-background-color: #0099cc; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12;"
                        text="Data Structure" />

                <Button fx:id="btnAlgorithm" onAction="#openAlgorithm"
                        maxWidth="250" style="-fx-background-color: #33cc33; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12;"
                        text="Algorithm" />

                <Button fx:id="btnAIVisual" onAction="#openAIVisual"
                        maxWidth="250" style="-fx-background-color: #cc33cc; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12;"
                        text="AI Visual" />
            </children>
            <alignment>
                CENTER
            </alignment>
        </VBox>

        <!-- Bottom-right Exit button with icon -->
        <Button prefHeight="35" prefWidth="120" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20"
                style="-fx-background-color: #444; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 12;">
            <graphic>
                <HBox spacing="5" alignment="CENTER">
                    <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                        <image>
                            <Image url="@img/logout.png" />
                        </image>
                    </ImageView>
                    <Label text="Exit" textFill="WHITE"/>
                </HBox>
            </graphic>
        </Button>

        <!-- Top-right Settings HBox -->
        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="130.0" spacing="5"
              AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0"
              style="-fx-background-color: rgba(68, 68, 68, 0.8); -fx-background-radius: 12; -fx-padding: 5; -fx-cursor: hand;">
            <children>
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/settings.png" />
                    </image>
                </ImageView>
                <Label text="Settings" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
        </HBox>

    </children>
</AnchorPane>



