<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane
        xmlns="http://javafx.com/javafx/24.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.vlearn.controller.HelloController"
        fx:id="rootPane"
        stylesheets="@style.css">

    <children>

        <!-- Background Overlay -->
        <Rectangle fill="#0d1117"
                   AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                   AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />

        <!-- Title -->
        <Label alignment="CENTER" contentDisplay="CENTER" text="Learning by Visual"
               textAlignment="CENTER" textFill="#F5F5F5"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="30.0">
            <font>
                <Font name="Segoe UI Black" size="42" />
            </font>
        </Label>

        <!-- VBox for Main Sections -->
        <VBox spacing="50" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.topAnchor="150.0" alignment="CENTER">

            <children>

                <!-- Programming Basics Section -->
                <VBox spacing="15" alignment="CENTER">
                    <Label text="Programming Basics" textFill="#E0E0E0">
                        <font>
                            <Font name="Segoe UI Semibold" size="26"/>
                        </font>
                    </Label>
                    <Button fx:id="btnProgrammingBasics" onAction="#openProgrammingBasics"
                            maxWidth="300"
                            style="-fx-background-color: linear-gradient(to right, #0078D7, #00C0A3);
                                   -fx-text-fill: white;
                                   -fx-font-size: 18px;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 14;
                                   -fx-cursor: hand;"
                            text="Start Learning" />
                </VBox>

                <!-- Simulation Path Section -->
                <VBox spacing="20" alignment="CENTER">
                    <Label text="Simulation Path" textFill="#E0E0E0">
                        <font>
                            <Font name="Segoe UI Semibold" size="26"/>
                        </font>
                    </Label>
                    <VBox spacing="15" alignment="CENTER">
                        <Button fx:id="btnDataStructure" onAction="#openDataStructure"
                                maxWidth="300"
                                style="-fx-background-color: #1E90FF;
                                       -fx-text-fill: white;
                                       -fx-font-size: 18px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 14;
                                       -fx-cursor: hand;"
                                text="Data Structure" />

                        <Button fx:id="btnAlgorithm" onAction="#openAlgorithm"
                                maxWidth="300"
                                style="-fx-background-color: #00BFA6;
                                       -fx-text-fill: white;
                                       -fx-font-size: 18px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 14;
                                       -fx-cursor: hand;"
                                text="Algorithm" />

                        <Button fx:id="btnAIVisual" onAction="#openAIVisual"
                                maxWidth="300"
                                style="-fx-background-color: #8A2BE2;
                                       -fx-text-fill: white;
                                       -fx-font-size: 18px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 14;
                                       -fx-cursor: hand;"
                                text="AI Visual" />
                    </VBox>
                </VBox>

            </children>
        </VBox>

        <!-- Floating Exit Button -->
        <Button fx:id="btnExit"
                AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20"
                prefWidth="60" prefHeight="60"
                style="-fx-background-color: #E63946;
                       -fx-background-radius: 30;
                       -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="28" fitWidth="28" preserveRatio="true">
                    <image>
                        <Image url="@img/logout.png"/>
                    </image>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="Exit Application"/>
            </tooltip>
        </Button>

        <!-- Floating Settings Button -->
        <Button fx:id="btnSettings"
                AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20"
                prefWidth="55" prefHeight="55"
                style="-fx-background-color: #2E2E2E;
                       -fx-background-radius: 28;
                       -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="26" fitWidth="26" preserveRatio="true">
                    <image>
                        <Image url="@img/settings.png"/>
                    </image>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="Settings"/>
            </tooltip>
        </Button>

    </children>
</AnchorPane>
