<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane
        xmlns="http://javafx.com/javafx/24.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.vlearn.controller.HelloController"
        fx:id="rootPane"
        prefWidth="900" prefHeight="600"
        style="-fx-background-color: linear-gradient(to bottom right, #0f0f1f, #1a1a3f);">

    <children>

        <!-- Background Circles -->
        <Circle radius="180" layoutX="200" layoutY="150"
                style="-fx-fill: radial-gradient(center 50% 50%, radius 100%, #00FFFF33, transparent);" />
        <Circle radius="140" layoutX="700" layoutY="400"
                style="-fx-fill: radial-gradient(center 50% 50%, radius 100%, #FF00FF33, transparent);" />

        <!-- Title -->
        <Label alignment="CENTER" contentDisplay="CENTER" text="vSimulations"
               textAlignment="CENTER" textFill="#00FFFF"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="30.0">
            <font>
                <Font name="Arcade Classic" size="50" />
            </font>
            <style>
                -fx-effect: dropshadow(gaussian, #00FFFF, 4, 0.5, 0, 0);
            </style>
        </Label>

        <!-- Main Content -->
        <VBox spacing="50" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.topAnchor="150.0" alignment="CENTER">
            <children>
                <VBox spacing="15" alignment="CENTER">
                    <Label text="PROGRAMMING BASICS" textFill="#FF00FF">
                        <font>
                            <Font name="Arcade Classic" size="28"/>
                        </font>
                        <style>
                            -fx-effect: dropshadow(gaussian, #FF00FF, 3, 0.5, 0, 0);
                        </style>
                    </Label>
                    <Button fx:id="btnProgrammingBasics" onAction="#openProgrammingBasics"
                            maxWidth="300"
                            style="-fx-background-color: linear-gradient(to right, #FF00FF, #FF69B4);
                                   -fx-text-fill: #FFFFFF;
                                   -fx-font-size: 20px;
                                   -fx-font-family: 'Arcade Classic';
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 16;
                                   -fx-cursor: hand;
                                   -fx-effect: dropshadow(gaussian, #FF00FF, 3, 0.5, 0, 0);" text="START" />
                </VBox>

                <VBox spacing="20" alignment="CENTER">
                    <Label text="SIMULATION PATH" textFill="#00FFFF">
                        <font>
                            <Font name="Arcade Classic" size="28"/>
                        </font>
                        <style>
                            -fx-effect: dropshadow(gaussian, #00FFFF, 3, 0.5, 0, 0);
                        </style>
                    </Label>
                    <VBox spacing="15" alignment="CENTER">
                        <Button fx:id="btnDataStructure" onAction="#openDataStructure"
                                maxWidth="300"
                                style="-fx-background-color: linear-gradient(to right, #00FFFF, #1E90FF);
                                       -fx-text-fill: #FFFFFF;
                                       -fx-font-size: 20px;
                                       -fx-font-family: 'Arcade Classic';
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 16;
                                       -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, #00FFFF, 3, 0.5, 0, 0);" text="DATA STRUCTURE" />

                        <Button fx:id="btnAlgorithm" onAction="#openAlgorithm"
                                maxWidth="300"
                                style="-fx-background-color: linear-gradient(to right, #FF4500, #FF6347);
                                       -fx-text-fill: #FFFFFF;
                                       -fx-font-size: 20px;
                                       -fx-font-family: 'Arcade Classic';
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 16;
                                       -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, #FF4500, 3, 0.5, 0, 0);" text="ALGORITHM" />
                    </VBox>
                </VBox>
            </children>
        </VBox>

        <!-- Help Request Pane (Always on top) -->
        <VBox fx:id="helpRequestPane"
              AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20"
              prefWidth="0" maxWidth="400" prefHeight="400"
              opacity="0"
              style="-fx-background-color: rgba(0,0,0,0.7); -fx-background-radius: 10; -fx-padding: 10;"
              spacing="10"
              pickOnBounds="true">
            <children>
                <Label text="Help Requests" textFill="#00FFFF">
                    <font>
                        <Font name="Arcade Classic" size="18" />
                    </font>
                </Label>

                <TextField fx:id="txtHelpMessage" promptText="Enter help message"
                           style="-fx-background-radius: 8; -fx-padding: 5;"/>

                <Button fx:id="btnSendHelp" text="Request Help" onAction="#onSendHelp"
                        style="-fx-background-color: linear-gradient(to right, #d35050, #e17b5d);
                       -fx-text-fill: white;
                       -fx-font-family: 'Arcade Classic';
                       -fx-background-radius: 12;
                       -fx-cursor: hand;" />

                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                            style="-fx-background-color: transparent; -fx-hbar-policy: never;">
                    <VBox fx:id="requestVBox" spacing="0"
                          style="-fx-background-color: transparent;" />
                </ScrollPane>
            </children>
        </VBox>

        <!-- Show/Hide Help Button (move this AFTER helpRequestPane) -->
        <Button fx:id="btnShowRequests" text="Helping Requests"
                onAction="#toggleHelpRequests"
                AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20"
                style="-fx-background-color: linear-gradient(to right, #00ff33, #12551b);
               -fx-text-fill: #FFFFFF;
               -fx-font-size: 14px;
               -fx-font-family: 'Arcade Classic';
               -fx-font: bold;
               -fx-background-radius: 12;
               -fx-cursor: hand;" />

        <!-- Settings Menu -->
        <MenuButton fx:id="btnSettings"
                    AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
                    text=""
                    style="-fx-background-color: linear-gradient(to bottom, #00FFFF, #008B8B);
                           -fx-background-radius: 28;
                           -fx-cursor: hand;
                           -fx-padding: 5;
                           -fx-effect: dropshadow(gaussian, #00FFFF, 4, 0.5, 0, 0);"
                    graphicTextGap="0"
                    focusTraversable="false">

            <graphic>
                <Label text="âš™" style="-fx-text-fill: #00FFFF; -fx-font-size: 20px;"/>
            </graphic>

            <items>
                <CustomMenuItem>
                    <content>
                        <Label text="Logout"
                               onMouseClicked="#handleLogout"
                               style="-fx-text-fill: #FF4500;
                                      -fx-font-weight: bold;
                                      -fx-font-family: 'Arcade Classic';
                                      -fx-background-radius: 10;
                                      -fx-padding: 8 20 8 20;">
                            <style>
                                .label:hover {
                                -fx-background-color: rgba(255,69,0,0.2);
                                -fx-cursor: hand;
                                }
                            </style>
                        </Label>
                    </content>
                </CustomMenuItem>

                <CustomMenuItem>
                    <content>
                        <Label text="Exit"
                               onMouseClicked="#handleExit"
                               style="-fx-text-fill: #FF6347;
                                      -fx-font-weight: bold;
                                      -fx-font-family: 'Arcade Classic';
                                      -fx-background-radius: 10;
                                      -fx-padding: 8 20 8 20;">
                            <style>
                                .label:hover {
                                -fx-background-color: rgba(255,99,71,0.2);
                                -fx-cursor: hand;
                                }
                            </style>
                        </Label>
                    </content>
                </CustomMenuItem>
            </items>

            <tooltip>
                <Tooltip text="Settings"/>
            </tooltip>
        </MenuButton>

    </children>
</AnchorPane>
