<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.vlearn.controller.dataStructure.BinaryTreeVisualizerController"
            prefWidth="900" prefHeight="600">

    <!-- Binary Tree Drawing Pane -->
    <AnchorPane
            AnchorPane.topAnchor="10"
            AnchorPane.leftAnchor="10"
            AnchorPane.rightAnchor="10"
            AnchorPane.bottomAnchor="200"
            style="-fx-background-color: #ffffff; -fx-border-color: #333; -fx-border-width: 2;">

        <Pane fx:id="treePane" prefWidth="880" prefHeight="380"
              style="-fx-background-color: transparent;" />

        <!-- Tree info -->
        <Label fx:id="sizeLabel" text="Size: 0"
               style="-fx-font-weight: bold; -fx-text-fill: white;"
               AnchorPane.topAnchor="5"
               AnchorPane.rightAnchor="10"/>
        <Label fx:id="heightLabel" text="Height: 0"
               style="-fx-font-weight: bold; -fx-text-fill: white;"
               AnchorPane.topAnchor="25"
               AnchorPane.rightAnchor="10"/>
    </AnchorPane>

    <!-- Controls panel -->
    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10"
          style="-fx-background-color: #ffffffcc; -fx-padding: 15; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 4);">

        <!-- Node operations -->
        <HBox spacing="10">
            <TextField fx:id="inputField" promptText="Enter value" prefWidth="100"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0078D7; -fx-padding: 5;"/>
            <Button text="Insert" onAction="#handleInsert" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #FF4C4C; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Find" onAction="#handleFind" style="-fx-background-color: #1B9AAA; -fx-text-fill: white; -fx-background-radius: 10;"/>
        </HBox>

        <!-- Traversal buttons -->
        <HBox spacing="10">
            <Button text="Preorder" onAction="#handlePreorder" style="-fx-background-color: #605E5C; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Inorder" onAction="#handleInorder" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Postorder" onAction="#handlePostorder" style="-fx-background-color: #00A300; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Level Order" onAction="#handleLevelOrder" style="-fx-background-color: #FFB900; -fx-text-fill: white; -fx-background-radius: 10;"/>
        </HBox>

        <!-- Utility buttons -->
        <HBox spacing="10">
            <Button text="Update" onAction="#handleUpdate" style="-fx-background-color: #605E5C; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Reset" onAction="#handleReset" style="-fx-background-color: #FF8C00; -fx-text-fill: white; -fx-background-radius: 10;"/>
        </HBox>

        <!-- Message label -->
        <Label fx:id="messageLabel" textFill="red"/>
    </VBox>
</AnchorPane>
