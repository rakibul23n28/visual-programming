<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.vlearn.controller.dataStructure.ArrayVisualizerController"
            prefWidth="800" prefHeight="500">

    <!-- Floating array panel with wrapping -->
    <AnchorPane
            AnchorPane.topAnchor="10"
            AnchorPane.leftAnchor="10"
            AnchorPane.rightAnchor="10"
            AnchorPane.bottomAnchor="200"
            style="-fx-background-color: #ffffff; -fx-border-color: #333; -fx-border-width: 2;">

        <!-- Array container fills width and grows, transparent background, no border -->
        <FlowPane
                fx:id="arrayContainer"
                hgap="15"
                vgap="15"
                AnchorPane.topAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.bottomAnchor="0"
                style="-fx-alignment: top-left; -fx-padding: 10; -fx-background-color: transparent;" />

        <!-- Size label on top-right with white text -->
        <Label
                fx:id="sizeLabel"
                text="Size: 0"
                style="-fx-font-weight: bold; -fx-text-fill: white;"
                AnchorPane.topAnchor="5"
                AnchorPane.rightAnchor="10" />
    </AnchorPane>




    <!-- Controls -->
    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10"
          style="-fx-background-color: #ffffffcc; -fx-padding: 15; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 4);">

        <!-- First row -->
        <HBox spacing="10">
            <TextField fx:id="inputField" promptText="Enter value" prefWidth="100"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0078D7; -fx-padding: 5;"/>
            <HBox fx:id="indexBox" spacing="5">
                <TextField fx:id="indexField" promptText="Index" prefWidth="80"
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0078D7; -fx-padding: 5;"/>
            </HBox>
            <Button text="Insert" onAction="#handleInsert" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Append" onAction="#handleAppend" style="-fx-background-color: #00A300; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Delete (Index)" onAction="#handleDelete" style="-fx-background-color: #FF4C4C; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Delete by Value" onAction="#handleDeleteByValue" style="-fx-background-color: #E81123; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Pop" onAction="#handlePop" style="-fx-background-color: #FFB900; -fx-text-fill: white; -fx-background-radius: 10;"/>
        </HBox>

        <!-- Second row -->
        <HBox spacing="10">
            <Button text="Update" onAction="#handleUpdate" style="-fx-background-color: #605E5C; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Find" onAction="#handleFind" style="-fx-background-color: #1B9AAA; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button text="Reset" onAction="#handleReset" style="-fx-background-color: #FF8C00; -fx-text-fill: white; -fx-background-radius: 10;"/>
        </HBox>

        <Label fx:id="messageLabel" textFill="red"/>
    </VBox>
</AnchorPane>
